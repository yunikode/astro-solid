---
// src/layouts/BaseLayout.astro
const {title} = Astro.props;
---
<style global>
.spacer {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
nav {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 4rem;
  box-shadow: 0 0 4px rgba(0, 0, 0, 0.5);
  background: white;
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
}

a {
  text-decoration: none;
  color: #000;
  font-size: 1.5rem;
  padding: 0 1rem;
}
</style>


<html>
  <head>
    <title>astro | {title}</title>
  </head>
  <body>
    <!-- Adds a navigation bar to every page. -->
    <nav>
      <a href={import.meta.env.MODE === 'development' ? `/` : `/astro-solid/` }>Home</a>
      <a href={import.meta.env.MODE === 'development' ? `/` : `/astro-solid/counter`}>Counter</a>
      <a href={import.meta.env.MODE === 'development' ? `/` : `/astro-solid/markdown`}>Markdown</a>
    </nav>
    <!-- slot: your page content will be injected here. -->
    <slot />
  </body>
</html>